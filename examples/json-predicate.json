[
  {
    "name": "JsonPredicateExample",
    "route": "always",
    "actions": [
      {
        "name": "has-foo.bar",
        "when": {
          "body": {
            "json": {
              "at": ".foo.bar",
              "when": {
                "is": true
              }
            }
          }
        },
        "respond-with": {
          "status": 200,
          "headers": [],
          "body": {"json": {
            "foo": { "bar": true },
            "abc": false
          }}
        }
      },
      {
        "name": "has-abc",
        "when": {
          "body": {
            "json": {
              "at": ".foo[]",
              "when": {"string": {"starts-with": "abc"}}
            }
          }
        },
        "respond-with": {
          "status": 200,
          "headers": [],
          "body": {"json": {
            "foo": { "bar": false },
            "abc": true
          }}
        }
      },
      {
        "name": "fallback",
        "when": "always",
        "respond-with": {
          "status": 200,
          "headers": [],
          "body": {"json": {
            "foo": { "bar": false },
            "abc": false
          }}
        }
      }
    ]
  }
]
